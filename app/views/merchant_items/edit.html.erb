<h1>Edit <%= @item.name %></h1>

<%= form_with url: "/merchants/#{@item.merchant.id}/items/#{@item.id}", method: :patch, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name , value: "#{@item.name}" %>
    <%= f.label :description %>
    <%= f.text_field :description , value: "#{@item.description}" %>
    <%= f.label :unit_price %>
    <%= f.text_field :unit_price , value: "#{@item.unit_price}" %>
    <%= f.submit 'Update Item' %>
<% end %>
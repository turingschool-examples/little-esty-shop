<h1>New Item</h1>
<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true  %><br>


  <%= f.label :description %>
  <%= f.text_field :description, size: 75, required: true %><br>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, required: true %>

  <%= f.submit %>
<% end %>
<section>
  <h3>Invoice: </h3>
  <%= @invoice.id %>
  <%= @invoice.status %>
  <%= @invoice.date %>
  <p>Total Revenue: <%= @invoice.total_revenue %>
</section>

<section>
<h3>Customer: <%= @invoice.customer.last_name %>, <%= @invoice.customer.first_name %></h3>
<ul>
  <li>Address: 123 Drury Ln</li>
  <li>Nowhere, ID 10001</li>
</ul>
</section>

<section>
  <table>
    <tr>
      <th>Item Name</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th colspan="2">Status</th>
    </tr>
    <tr>
    <% @invoice.invoice_items.each do |invitem| %>
      <td><%= invitem.item.name %></td>
      <td><%= invitem.quantity %></td>
      <td><%= invitem.unit_price %></td>
      <td><%= form_with model: invitem, method: :patch, url: merchant_invoice_item_path(@invoice.merchant_id, invitem.id), local: true do |f| %>
          <%= f.select :status, enum_collection_for_select(InvoiceItem.statuses), selected: invitem.status  %>
          <%= button_tag 'Submit' %>
          <% end %></td>
    </tr>
    <% end %>
  </table>
<section>

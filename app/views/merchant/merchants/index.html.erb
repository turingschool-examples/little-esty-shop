<div align="center">
  <%= button_to "Original Sorting", merchants_path, method: :get, class:"btn btn-outline-dark navbar-custom btn-sm"  %>
  <%= button_to "Sort Alphabetically", merchants_path, method: :get, class:"btn btn-outline-dark navbar-custom btn-sm", params: { sort: 'name' } %>
  <%= button_to "Sort by Updated Date", merchants_path, method: :get, class:"btn btn-outline-dark navbar-custom btn-sm", params: { sort: 'date' } %>
</div><br/><br/>


<div align="center">
  <h1>All Merchants</h1>
  <% @merchants.each do |merchant| %>
    <div class="card navbar-custom"  style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">
          <%= merchant.name %>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">
          Created <%= merchant.format_date(merchant.created_at) %>
        </h6>
        <%= link_to merchant.name, merchant_dashboard_index_path(merchant.id), class:"btn btn-outline-dark navbar-custom"%>
      </div>
    </div><br/>
  <% end %>
</div>

<li>ID: <%= @invoice.id %></li>
<li>Status: <%= @invoice.status %></li>
<li>Created at: <%= @invoice.created_at_formatted %></li>
<li>Customer: <%= @invoice.customer_full_name %></li>
Total Invoice Revenue: <%= number_to_currency(@invoice.total_revenue) %>
<section id=update_invoice_status>
      <%= form_with model: @invoices, method: :patch do |f| %>
        <%= f.label "Status"%>
        <%= f.select :status, ["in progress", "completed", "cancelled"], selected: @invoice.status %>
        <%= f.submit "Update Invoice" %>
      <% end %>
      <br>
    </div>
</section>

<% @invoice.invoice_items.each do |invoice_item| %>
  <%= invoice_item.item.name %><br>
  Quantity: <%= invoice_item.quantity %><br>
  Unit Price: <%= number_to_currency(invoice_item.unit_price) %><br>
  Status: <%= invoice_item.status %><br>
<% end %>


<h1> Admin </h1>

<%= link_to "Merchants", "/admin/merchants" %>
<%= link_to "Invoices", "/admin/invoices" %>

<h2>Top Customers</h2>

<% @customers.each do |customer|%>
<p><%= customer.full_name %>: <%= customer.success_count %> purchases</p>
<% end %>

<h2>Incomplete Invoices</h2>

<section id="incomplete_invoices">
  <% @incomplete_invoices.each do |invoice| %>

    <p>Invoice #<%= link_to "#{invoice.id}", "/admin/invoices/#{invoice.id}" %>
    - <%= invoice.created_at.strftime("%A, %B %e, %Y") %></p>
  <% end %>
</section>



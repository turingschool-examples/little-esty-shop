<h1>Admin Dashboard</h1>

<%= link_to 'Merchants', '/admin/merchants' %>
<%= link_to 'Invoices', '/admin/invoices' %>

<div id = "top customers" >
<h3> Top Customers </h3>
<ol>
  <%# top customers is nested collection where [0] is customer name and [1] is transaction count %>
<% Customer.top_customers.each do |customer| %>
  <li><%= customer[0] %> - <%= customer[1] %> purchase(s)</li>
<% end %>
</ol>
</div>

<div id = "incomplete invoices" >
<h3> Incomplete Invoices </h3>
<% Invoice.pending_invoices.each do |invoice| %>
  <div id="id-<%= invoice.id %>">
    Invoice #<%= link_to "#{invoice.id}", "/admin/invoices/#{invoice.id}" %> - <%= invoice.created_at.strftime("%A, %B %-d, %Y") %><br>
  </div>
<% end %>
</div>

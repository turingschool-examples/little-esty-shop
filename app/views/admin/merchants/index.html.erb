<!DOCTYPE html>
<div class="">
  <h1 class="little_esty_shop">Little Esty Shop</h1>
</div>

<div class="nav_bar_wrapper">
  <h1 class="title_name">Admin Dashboard</h1>
  <div class="nav_bar_links">
    <p class="nav_bar_links_inline"><%= button_to "Dashboard", "/admin", method: :get %></p>
    <p class="nav_bar_links_inline"><%= button_to "Merchants", "/admin/merchants", method: :get %></p>
    <p class="nav_bar_links_inline"><%= button_to "Invoices", "/admin/invoices", method: :get %></p>
  </div>
</div>

<%= link_to 'Create New Merchant', '/admin/merchants/new' %>

<h2 class="title_wrapper"></h2>



<h1>Enabled Merchants:</h1>
<section id='enabled_merchants'>
<% @enable.each do |merchant| %>
<h3><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %><%= button_to "Disable #{merchant.name}", "/admin/merchants/#{merchant.id}/status?disable=true", method: :patch %></h3>
<% end %>
</section>

<h1>Disabled Merchants:</h1>
<section id='disabled_merchants'>
<% @disable.each do |merchant| %>
<h3><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %><%= button_to "Enable #{merchant.name}", "/admin/merchants/#{merchant.id}/status?enable=true", method: :patch %></h3>
<% end %>
</section>

<h1>Top Five By Revenue Generated:</h1>
<section id='top_five'>
  <% @top_five.each do |merchant| %>
  <p><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %> <%= "Top selling date for #{merchant.name} was on: #{Invoice.top_five_best_day(merchant.id).strftime('%m/%d/%Y')}" %></p>
  <%= merchant.total_revenue %>
  <% end %>
</section>

<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    .title {font-size: 40px; text-align: center; font-weight: bold}
    .nav_bar ul {list-style-type: none; overflow: hidden; margin: 0; padding: 0;}
    .nav_bar li {display: block;  text-align: center; padding: 0px 16px;}
    .right_tab {float: right;}
    .page_name {float: left; font-size: 30px;}
    </style>
  </head>

  <body>
  <%flash.each do |type, msg|%>
  <div>
    <%=msg%>
  </div>
  <%end%>
    <%= yield %>
    <div id="footer">
     <%= render partial: 'layouts/footer', locals: {name: @repository_name, group: @group_usernames, contributions: @contributor_commits, pull_requests: @pull_requests} %>
    </div>
  </body>
</html>

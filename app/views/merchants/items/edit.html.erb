<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}?mode=form", method: :patch, local: true do |f| %>
  <%= f.label :name, 'Item name' %>
  <%= f.text_field :name, value: @item.name %>

  <%= f.label :description, 'Description' %>
  <%= f.text_field :description, value: @item.description %>

  <%= f.label :unit_price, 'Unit price' %>
  <%= f.text_field :unit_price, value: @item.unit_price %>

  <%= f.select :status, ['enabled', 'disabled'] %>

  <%= f.submit 'Update item' %>
<% end  %>

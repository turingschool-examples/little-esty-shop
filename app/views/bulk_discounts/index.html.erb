<h1><%= @merchant.name %>'s Bulk Discounts</h1>

<div id="discounts">
  <% @merchant.bulk_discounts.each do |discount| %>
    <div id="discount-<%= discount.id %>">
      <h2>Discount <%= discount.id.to_s %>: <%= discount.percentage_discount.to_s %>% off if you purchase <%= discount.quantity_threshold.to_s %> or more of an item.</h2>  
      <%= link_to "View Details", merchant_bulk_discount_path(@merchant.id, discount.id) %>
      <%= link_to "Delete Discount", merchant_bulk_discount_path(@merchant.id, discount.id), method: :delete %>
    </div>
  <% end %>
</div>

<div id="new-discount">
  <%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant.id) %>
</div>

<div id="holidays">
<h2>Upcoming Holidays</h2>
<h3><%= @response[0]["name"]%>: <%= @response[0]["date"]%></h3>
<h3><%= @response[1]["name"]%>: <%= @response[1]["date"]%></h3>
<h3><%= @response[2]["name"]%>: <%= @response[2]["date"]%></h3>
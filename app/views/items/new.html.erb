<h1>Create New Item</h1>

<%= form_with url: merchant_items_path, method: :post, local: true do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>
  <%= f.label :description, 'Description' %>
  <%= f.text_field :description %>
  <%= f.label :unit_price, 'Unit price' %>
  <%= f.text_field :unit_price %>
  <%= f.submit 'Submit' %>
<% end %>
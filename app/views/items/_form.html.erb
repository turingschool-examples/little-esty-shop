<%= form_with model: model, method: method, url: url, class: 'merchant_item_form', local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/><br/>
  <%= f.label :description %>
  <%= f.text_field :description %><br/><br/>
  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %><br/><br/>
  <%= f.submit 'Submit'%>
<% end %>

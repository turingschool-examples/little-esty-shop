<h1>Item Edit</h1>
<%= form_with url: merchant_item_path(@merchant.id, @item.id), method: :patch, local: true do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name, :value => @item.name%>

  <%= f.label :description%>
  <%= f.text_field :description, :value => @item.description%>

  <%= f.label :unit_price%>
  <%= f.number_field :unit_price, :value => @item.unit_price%>

  <%= f.submit%>

<% end %>